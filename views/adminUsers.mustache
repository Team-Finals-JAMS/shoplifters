<html>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Karma" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        body,
        h1,
        h2,
        h3,
        h4,
        h5,
        h6 {
            font-family: "Karma", sans-serif;
        }
        .w3-bar-block .w3-bar-item {
            padding: 20px;
        },
        .deck-container {
            width: 300px;
            padding: 5%;
        }
    </style>
    <body>
        <!-- Top menu -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand">ShopLifters</a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/admin/products">Admin Products</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/admin/orders">Admin Orders</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/admin/users">Admin Users</a>
                    </li>   
                </ul>
                <form class="form-inline my-2 my-lg-0" action="/admin/users/search" method="get">
                    <input class="form-control mr-sm-2" type="search" name="search" placeholder="Search" aria-label="Search">
                    <input type="submit" class="btn btn-outline-success my-2 my-sm-0" value="Search" />
                </form>
            </div>
        </nav>

        <!-- !PAGE CONTENT! -->
        <div class="deck-container">
            <div className="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5">
                <div class="card-group">
                {{#users}}
                    <div class="col mb-4" key={{_id}}>
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">{{firstName}} {{lastName}}</h5>
                                <p class="card-text">{{email}}</p>
                                {{#role}}
                                    <p class="card-text">{{role}}</p>
                                {{/role}}
                                </div>
                            </div>
                            <div class="card-body">
                                <div>
                                    <form class="form-inline my-2 my-lg-0" action="/admin/users/update" method="post">
                                        <div class="input">
                                            <input
                                                type="text"
                                                class="input_field"
                                                name="firstName"
                                                id="firstName"
                                                placeholder={{firstName}}
                                            />
                                        </div>
                                        <div class="input">
                                            <input
                                                type="text"
                                                class="input_field"
                                                name="lastName"
                                                id="lastName"
                                                placeholder={{lastName}}
                                            />
                                        </div>
                                        <div class="input">
                                            <input
                                                type="text"
                                                class="input_field"
                                                name="email"
                                                id="email"
                                                placeholder={{email}}
                                            />
                                        </div>
                                    <div class="input">
                                        <input
                                            type="hidden"
                                            class="input_field"
                                            name="id"
                                            id="id"
                                            value={{_id}}
                                        />
                                    </div>                                        
                                        <div class="input-group-text">
                                            <input type="checkbox" name="isAdmin" >
                                        </div>
                                        <input type="submit" class="btn btn-outline-success my-2 my-sm-0" value="Update User" />
                                    </form>
                                </div>
                            </div>
                            <div class="card-footer">
                                <form class="form-inline my-2 my-lg-0" action="/admin/users/delete" method="post">
                                    <div class="input">
                                        <input
                                            type="hidden"
                                            class="input_field"
                                            name="id"
                                            id="id"
                                            value={{_id}}
                                        />
                                    </div>
                                    <input type="submit" class="btn btn-outline-danger my-2 my-sm-0" value="Delete User" />
                                </form>                                                               
                            </div>
                        </div>                
                    </div>
                {{/users}}
                {{^users}}
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <strong>No Users to display</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {{/users}}
                </div>
            </div>        
        </div>
    </body>
</html>